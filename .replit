modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libyaml"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Kraken Trading Bot"

[[workflows.workflow]]
name = "Kraken Trading Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run main.py --server.address=0.0.0.0 --server.port=5000 --server.headless=true --server.enableCORS=false --server.enableXsrfProtection=false"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 46121
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "main.py", "--server.address=0.0.0.0", "--server.port=5000", "--server.headless=true", "--server.enableCORS=false", "--server.enableXsrfProtection=false"]
